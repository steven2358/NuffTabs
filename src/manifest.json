{
  "manifest_version": 3,
  "name": "'Nuff Tabs",
  "version": "2.0.0",
  "description": "Limit the number of open tabs. Automatically close previous tabs.",
  "author": "Steven Van Vaerenbergh",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "i/icon16.png",
      "48": "i/icon48.png",
      "128": "i/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "i/icon16.png",
    "48": "i/icon48.png",
    "128": "i/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["whatsnew.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
